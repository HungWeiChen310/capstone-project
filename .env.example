# ==============================================================================
# General Application Settings
# ==============================================================================
FLASK_DEBUG=False
PORT=443
# Secret key for Flask sessions. Can be a path to a file or the key itself.
# If SECRET_KEY_FILE is set, it will be used. Otherwise, SECRET_KEY is used.
SECRET_KEY=your_secret_key_here
SECRET_KEY_FILE=data/secret_key.txt
# Validation mode for environment variables: 'strict' (exit on missing) or 'loose' (warn only)
VALIDATION_MODE=strict

# ==============================================================================
# SSL Settings
# ==============================================================================
USE_SSL=True
SSL_CERT_PATH=certs/cert.pem
SSL_KEY_PATH=certs/key.pem

# ==============================================================================
# LINE Bot API Settings
# ==============================================================================
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here

# ==============================================================================
# Ollama AI Service Settings
# ==============================================================================
OLLAMA_SCHEME=http
OLLAMA_HOST=127.0.0.1
OLLAMA_PORT=11434
OLLAMA_MODEL=your_model_name
# Timeout for Ollama requests in seconds
OLLAMA_TIMEOUT=30.0

# ==============================================================================
# Database Settings (for structured data)
# ==============================================================================
DB_SERVER=your_db_server
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# ==============================================================================
# Retrieval-Augmented Generation (RAG) System Settings
# ==============================================================================
# Master switch to enable or disable the RAG system
ENABLE_RAG=true
# Comma-separated list of local file paths or directories for the knowledge base
RAG_SOURCE_PATHS=data/rag_sources/
# Number of top results to retrieve from the vector store
RAG_TOP_K=3
# Minimum similarity score for a retrieved document to be considered
RAG_MIN_SCORE=0.4
# Maximum number of characters for the context sent to the AI model
RAG_MAX_CONTEXT_CHARS=2500
# Number of top results to retrieve specifically from the database source
RAG_DB_TOP_K=3

# ==============================================================================
# Admin Dashboard Settings
# ==============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password
